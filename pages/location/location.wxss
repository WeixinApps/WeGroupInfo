.topad{
    width:100%;
    background: rgba(242,242,242,0.7);
    padding-bottom: 20rpx;
}
.topad>view{
    background: #fff;
    padding: 10rpx 30rpx;
}
.topad .title{
    font-size: 40rpx;
    text-align: center;
}
.topad .location{
    margin: 0 auto;
}
.topad .location image{
    width: 40rpx;
    height:40rpx;
    padding: 0rpx 10rpx;
    /*margin-top:5rpx;*/
    /*display: inline-block;*/
    float: left;
}
.topad .location text{
    line-height: 40rpx;
    display: inline-block;
}
.topad image{
    width: 100%;
}