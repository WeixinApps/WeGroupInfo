.topad{
    width:100%;
    border-bottom:20rpx solid rgba(242,242,242,0.7);
}
.topad>view{
    background: #fff;
    padding: 10rpx 30rpx;
}
.topad .title{
    font-size: 40rpx;
    text-align: center;
}
.topad .location{
    margin: 0 auto;
}
.topad .location image{
    width: 40rpx;
    height:40rpx;
    padding: 0rpx 10rpx;
    /*margin-top:5rpx;*/
    /*display: inline-block;*/
    float: left;
}
.topad .location text{
    line-height: 40rpx;
    color:#666;
    display: inline-block;
}
.topad .first{
    position: relative; 
}
.topad .first image{
    width: 100%;
    height: 300rpx;
}
.topad .atitle{
    position:absolute;
    z-index:1;
    background:rgba(100,100,100,.6);
    bottom:20rpx;
    width:650rpx;
    padding:10px;
    color:#fff;
}
.ad-group{
    overflow: hidden;
    border-bottom:20rpx solid rgba(242,242,242,0.7);
}
.ad-group view.title{
    margin: 20rpx 30rpx;
    border-left: 8rpx solid #0081bc;
    padding-left: 15rpx;
    font-size: 34rpx;
}
.ad-group .cols{
    display: flex;
}
.ad-group .cols>navigator{
    flex:1;
}
.rows navigator{
    margin: 10rpx 30rpx;
    display: block;
    border-top: 1rpx solid #ddd;
    overflow: hidden;
    padding: 15rpx 0;
}
.rows .author{
    float:left;
}
.rows>navigator image{
    float: left;
    width: 200rpx;
    height: 150rpx;
    padding-right:10px;
}
.nav-title{
    padding: 10rpx 0 0 0;
    font-size: 34rpx;
}
.nav-info{
    float: left;
    font-size: 26rpx;
    padding: 10rpx 0 0 0;
    width: 425rpx;
    color: #666;
}
.nav-info .date{
    float: right;
    margin-right: 0;
}