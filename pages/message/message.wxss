.menu-bar{
    display: flex;
    width:100%;
}
.menu-bar>navigator{
    flex:1;
    padding:30rpx;
    text-align: center;  
}
.menu-bar>navigator image{
    width: 90rpx;
    height: 90rpx;
    padding: 20rpx auto;
}
.menu-bar view.menu{
    padding: 10rpx 0;
}
swiper{
    height: 280rpx;
}
.slide-image{
    width:100%;
    height:280rpx;
}
.messages{
    background: rgba(242,242,242,0.7);
    padding: 20rpx 0;
}
.message{
    background: #fff;
    margin: 0 0 20rpx 0;
}
.message:last-child{
    margin-bottom: 0;
}
.message-info{
    padding: 30rpx;
    padding-bottom: 10rpx;
    overflow: hidden;
}
.message-info image{
    width: 80rpx;
    height: 80rpx;
    padding-left:20rpx;
    float: left;
}
.user-id,.time{
    margin-left:120rpx;
    padding:5rpx;
    padding-top:0rpx;
    font-size:35rpx;
}
.time{
    font-size: 22rpx;
    color:#666;
    padding-top:10rpx;
}
.message .title{
    margin: 0 30rpx;
    padding: 10rpx 15rpx 40rpx 15rpx;
    font-size: 40rpx;
}
.message .close{
    float:right;
    height:40rpx;
    width: 40rpx;
}
.message .close image{
    height: 32rpx;
    width:32rpx;
    margin:4rpx;
}
.gcolor{
    color:#666;
}