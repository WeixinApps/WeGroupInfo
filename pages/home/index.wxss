view.container{
    overflow: hidden;
}
view.nav{
    width:100%;
    margin-bottom: 20rpx;
    position: fixed;
    background: #fff;
    z-index: 10;
    white-space:nowrap;
    overflow-x: auto;
}
view.nav>view{
    color:#666;
    /*float: left;*/
    display: inline-block;
    width: 60rpx;
    padding: 20rpx 40rpx;
}
view.nav>view.current{
    color:#000;
    border-bottom: 4rpx solid rgb(15,174,255);
}
view.content{
    margin-top: 75rpx;
}
view.itemPic{
    height: 400rpx;
    width: 100%;
    background:  url('http://youyouplay.com/public/images/banner-3.jpg');
    background-size: cover;
}
view.itemTitle{
    padding: 20rpx;
    font-size: 40rpx;
}
view.itemSummary{
    padding: 0 20rpx;
}
view.itemInfo{
    padding: 20rpx;
    color:#666;
    /*background-color: #33b;*/
}
view.itemAuthor{
    padding-left:10rpx;
    /*background-color: #d3b;*/
}
view.itemTime{
    float:right;
