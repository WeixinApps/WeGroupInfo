view.container{
    overflow: hidden;
}
view.nav{
    width:100%;
    margin-bottom: 20rpx;
    position: fixed;
    background: #fff;
    z-index: 10;
    white-space:nowrap;
    overflow-x: scroll;
}
view.nav>navigator{
    color:#666;
    /*float: left;*/
    display: inline-block;
    width: 60rpx;
    padding: 20rpx 40rpx;
}
view.nav>navigator.current{
    color:#000;
    border-bottom: 4rpx solid rgb(15,174,255);
}
view.content{
    margin-top: 75rpx;
}
view.itemPic{
    height: 400rpx;
    width: 100%;
    background:  url('http://youyouplay.com/public/images/banner-3.jpg');
    background-size: cover;
}
view.itemContent{
    margin: 0 30rpx 20rpx 30rpx;
}
view.itemTitle{
    padding: 20rpx 0;
    font-size: 40rpx;
}
view.itemSummary{
    padding: 0;
}
view.itemInfo{
    padding: 20rpx 0;
    color:#666;
    overflow: hidden;
    /*background-color: #33b;*/
}
view.itemTime{
    float:right;
    /*background-color: #fac;*/
}