view.userinfo{
    width: 100%;
    height:200rpx;
    background: #0faeff;
    overflow: hidden;
    padding: 30rpx;
}
view.avatar{
    width:100%;
    height:190rpx;
    overflow:hidden;
}
view.avatar image{
    display: block;
    width:150rpx;
    height: 150rpx;
    border-radius:75rpx;
    /*border: 2rpx solid #fff;*/
    margin:20rpx;
    float:left;
}
view.avatar text{
    display: block;
    color: #fff;
    margin:50rpx 40rpx;
    font-size:36rpx;
}